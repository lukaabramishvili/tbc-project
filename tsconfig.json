{
  "compilerOptions": {
    "baseUrl": ".", // Sets the base directory for non-relative imports
    "paths": {
      "@/*": [
        "src/*"
      ] // Maps "@" to the "src" folder
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "esModuleInterop": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "./dist/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
